

mainmenu "Anckor Kernel Configuration"

menu "build type"

config build_debug
	bool "debug build"
	default y
	help
	  	compile kernel with debug flags

endmenu

menu "kernel"

config module_kernel
	bool "kernel module"
	default y
	help
	  	This module is core kernel one which contains base services 
	  	such as scheduling, threads creation, memory protection, etc...

config module_platform
	bool "platform module"
	default y
	help
	  	platform specific module

config module_arch
	bool "arch module"
	default y
	help
		architecture specific module

config module_drivers
	bool "drivers module"
	default y
	help
		drivers specific module

endmenu

menu "lib"

config module_lib_libc
	bool "libc module"
	default y
	help
		libc module

endmenu

menu "tests"

config module_tests_threads
	bool "test threads app"
	default y
	help
		test threads app

config module_tests_apps
	bool "test apps app"
	default n
	help
		test apps app

endmenu

